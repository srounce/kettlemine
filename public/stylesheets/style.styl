@import 'nib'

@font-face 
    /* This declaration targets Internet Explorer */
    font-family: 'FuturaStdBoldOblique';
    src: url('/fonts/futurastd-boldoblique-webfont.eot');

@font-face
    /* This declaration targets everything else */
    font-family: 'FuturaStdBoldOblique';
    src: url(//:) format('no404'), url('/fonts/futurastd-boldoblique-webfont.woff') format('woff'), url('/fonts/futurastd-boldoblique-webfont.ttf') format('truetype'), url('/fonts/futurastd-boldoblique-webfont.svg#FuturaStdBoldOblique') format('svg');
    font-weight: normal;
    font-style: normal;

$bodyFont = "Helvetica Neue", Arial, sans-serif


html
  background #DDD
  padding 3em
body
  background #FFF
  padding 3em
  font 1.32em $bodyFont
  color #666
for $level in 1..6
  h{$level}
    $size = 50% * (6 - $level)
    font-size $size
    line-height 1em
    font-family "FuturaStdBoldOblique", sans-serif
a
  color #00B7FF
button
  font .75em $bodyFont
  $bgCol = #999
  cursor pointer
  margin 0
  border 0
  padding .5em
  border-radius 3px
  border-top 1px solid ($bgCol + #333)
  background #FFF
  color $bgCol + #111 - rgba(0,0,0,0.2)

#content
  position relative
  z-index 1

.shadow
  $shadowAngle = 6deg
  position relative
  box-shadow 0 0 2px rgba(0,0,0,0.25) inset, 0 0 2em rgba(0,0,0,0.1) inset
  border-top 0
  border-right 0
  border-bottom 0
  border-left 0
  &:before, &:after 
    z-index -2
    box-shadow 0 .75em 1em rgba(0,0,0,0.4)
    border-radius 1em
    display block
    height 20%
    width 50%
    background transparent
    position absolute
    left 10px
    bottom 15px
    content ""
    transform rotate($shadowAngle)
  &:before
    transform rotate($shadowAngle * -1)
  &:after
    right 10px
    left auto

